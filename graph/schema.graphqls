# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar RecipeID

type Recipe {
  id: RecipeID!
  title: String!
  description: String!
  ingredients: [String!]!
  steps: [String!]!
}

input CreateRecipeInput {
  id: RecipeID!
  title: String!
  description: String!
  ingredients: [String!]!
  steps: [String!]!
}

input UpdateRecipeInput {
  id: RecipeID!
  title: String
  description: String
  ingredients: [String!]
  steps: [String!]
}

type Response {
  message: String!
  recipe: [Recipe]!
}

type Query {
  # fetches recipe. Granularity (data verbosity) and amount of recipes controlled by client
  recipes(id: [RecipeID!]): Response
}

type Mutation {
  # create a new recipe
  createRecipe(input: CreateRecipeInput!): Response

  # update a recipe
  updateRecipe(input: UpdateRecipeInput!): Response

  # delete a recipe
  deleteRecipe(id: RecipeID!): Response
}
